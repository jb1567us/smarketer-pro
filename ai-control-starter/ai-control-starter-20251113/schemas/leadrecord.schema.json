{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LeadRecord",
  "type": "object",
  "required": [
    "name",
    "company",
    "role",
    "email",
    "source",
    "tags"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "company": {
      "type": "string",
      "minLength": 1
    },
    "role": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
    },
    "source": {
      "type": "string",
      "enum": [
        "scrape",
        "upload",
        "api"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "linkedin_url": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
