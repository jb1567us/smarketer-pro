{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreativeSpec",
  "type": "object",
  "required": [
    "id",
    "channel",
    "audience",
    "hook",
    "body",
    "cta",
    "assets"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "channel": {
      "type": "string",
      "enum": [
        "linkedin",
        "email",
        "search",
        "display"
      ]
    },
    "audience": {
      "type": "string"
    },
    "hook": {
      "type": "string",
      "maxLength": 140
    },
    "body": {
      "type": "string"
    },
    "cta": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "value"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "utm_params": {
      "type": "object",
      "properties": {
        "utm_source": {
          "type": "string"
        },
        "utm_medium": {
          "type": "string"
        },
        "utm_campaign": {
          "type": "string"
        },
        "utm_content": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
