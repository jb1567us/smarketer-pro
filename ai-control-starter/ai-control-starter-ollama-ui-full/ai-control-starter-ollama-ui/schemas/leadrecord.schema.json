{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LeadRecord",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "name": { "type": "string" },
    "source": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["id", "email"],
  "additionalProperties": true
}
